<h1>New forum</h1>

<%= error_messages_for :forum %>

<% form_for([:admin, @forum]) do |f| %>
  <p>
    <%= f.collection_select(:category_id, @all_categories, :id, :name) %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_forums_path %>
