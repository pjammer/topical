<% @post = Message.new unless @post %>
<% form_for @post do |f| -%>
  <div class="box" id="box-posts-new">
    <span id="reply" class="top">Post a Reply</span>
    <br />
      <%= f.hidden_field :topic_id, :value => @topic.id %>
      <%= f.text_area :content, :value => @content, :rows => '8', :style => "width:66%;" %>
      <p>
        <%= submit_tag "Post Reply", :disable_with => "Post Reply" %>&nbsp; 
        <%= link_to('Cancel', topic_message_path(params[:id])) if current_action == 'quote' %>
      </p>
    </div>
<% end %>
