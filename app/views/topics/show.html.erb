<div class="header_forum">
<% unless current_controller == 'search' %>
  <div class="info-left">
    <span class="detail">
      &laquo; <%= link_to @topic.forum.name, @topic.forum %>
      &laquo; <%=h @topic.forum.category.name %>
      <%= @topic.locked? ? ', Locked' : '' %>
    </span>
<br />
    <span class="title"><%=h @topic.title %></span>
  </div>
  <div class="info-right">
    <span class="title">&nbsp;</span>
    <span class="detail">
      <%= link_to_remote "#{pluralize(number_with_delimiter(@topic.messages_count), 'Message')} by #{pluralize(number_with_delimiter(@topic.posters), 'User')}", :url => {:action => 'show_posters', :id => @topic.id} %>
<%= render :partial => "search/search", :locals => {:urly => forum_search_path} %>
      <% if @topic.last_page != 1 %>
      &nbsp;|&nbsp;&nbsp;<%= will_paginate @posts, :inner_window => 1, :outer_window => 0, :prev_label => '&laquo; Prev' %>
      <% end %>
    </span>
  </div>
  <div style="clear:both;"> </div>
<% end %>

<div class="info-left detail" id="posters" style="display:none;"></div>
</div>
<div style="clear:both;"> </div>

<% @posts.each_with_index do |post, index| index+=1 %>
  <%= render 'messages/show', { :post => post, :index => index } %>
<% end %>

<% unless current_controller == 'search' %>
  <div class="info-left info-space info-width info-footer">
    <%= prev_page @posts %>
  </div>
  <div class="info-center info-space info-width info-footer">
    <%= current_page @posts %>
  </div>
  <div class="info-right info-space info-width info-footer">
    <%= next_page @posts %>
  </div>
  <div style="clear:both;"> </div>
<% end %>

<% unless current_controller == 'search' %>
  <% if logged_in? && (!@topic.locked || can_edit?(@topic)) %>
    <%= render 'messages/new' %>
  <% end %>
  <% if @topic.locked && !can_edit?(@topic) %>
    <div class="nav nav-footer">
      <p class="nav-right">This Topic is Locked</p>
    </div>
  <% end %>
  <% if !logged_in? %>
    <div class="nav nav-footer">
      <p class="nav-right">
        <%= link_to('Login', login_path) %> or 
        <%= link_to('Signup', signup_path) %> to post a reply
      </p>
    </div>
  <% end %>
<% end %>


